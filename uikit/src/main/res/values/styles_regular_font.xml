<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Regular Font Styles   -->
    <style name="regular" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/sf_default_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular.caption2">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="regular.caption1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="regular.footnote">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="regular.subHeadline">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="regular.callout">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="regular.body">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="regular.headline">
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="regular.title3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="regular.title2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="regular.title1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="regular.largeTitle">
        <item name="android:textSize">34sp</item>
    </style>

</resources>